/**
*  Importar la fuentes de iconos
**/

@font-face 
	font-family: 'navigation';
	src:url('../fonts/fuentes.eot');
	src:url('../fonts/fuentes.eot?#iefix') format('embedded-opentype'),
		url('../fonts/fuentes.woff') format('woff'),
		url('../fonts/fuentes.ttf') format('truetype'),
		url('../fonts/fuentes.svg#fuentes') format('svg');
	font-weight: normal;
	font-style: normal;

/**
*  Mixins  de texto
**/

fonticons(size=1rem,weight,valweight)
	font-family "navigation"
	font-size size
	if(weight)
		font-weight valweight


/**
* botones circulares => indicadores del progreso
**/
.icon
	display inline-block;
	vertical-align: middle;
	zoom: 1; /* Fix for IE7 */
	*display: inline; /* Fix for IE7 */
	margin 0
	&_input
		position: relative
		left: -30px;
.navigation__tab__link:after
	fonticons(1.5rem,false,0)
	content "\e607"	

/**
* botones de navegacion Adelante y Atras
**/

.icon_next:after
	fonticons(2rem,true,bold)
	content "\e605"

.icon_prev:after
	fonticons(2rem,true,bold)
	content "\e606"

//Buscar

//Borrar 
.icon_trash:after 
	fonticons(2em,true,bold)
	content: '\e608'

//Icono de configuracion
.icon_config:after 
	fonticons(2em,true,bold)
	content: '\e609'

//icono de home
.icon_home:after
	fonticons(2em,true,bold)
	content: '\e900'

