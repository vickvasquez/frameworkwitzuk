form
	clearMargin()

legend
	font-size 1.2rem
	padding .5rem
	font-weight 300
	
input
select
textarea
	&:disabled
		background-color rgba(texto_negro, 0.075) !important
		
input[readonly]
select[readonly]
textarea[readonly]
	background-color rgba(0, 0, 0, .075) !important
	
.form
	display flex
	
.form__horizontal
	flex-wrap wrap
	flex-direction row
	justify-content space-between
	
	.form_fields
		margin-bottom 0

.form__vertical
	align-items center
	flex-direction column

.form_fields
	display: inline-block;
	margin-bottom: 1rem;
	vertical-align: middle;

	label
		display: inline-block;
		font-weight: 700;
		margin-bottom: 5px;
		max-width: 100%;

	.form_control
	.form_textarea
		*display: inline; /* Fix for IE7 */
		background-color: #fff;
		background-image: none;
		border-radius: 4px;
		border: 1px solid #ccc;
		box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
		box-sizing border-box
		color: #555;
		display inline-block;
		font-size: 14px;
		height 34px
		line-height: 1.42857143;
		outline 0
		padding: 6px 12px;
		transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s
		vertical-align: middle;
		width auto
		zoom: 1; /* Fix for IE7 */

		&:focus
			border 1.5px solid color_info
		&:focus + .icon-search
				border 1px solid color_info;

	.form_textarea
		height: 114px;
		margin: 0px;
		resize none
		width: 425px;